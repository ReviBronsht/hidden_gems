<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/flMainFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddGem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/llBottomNav"
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHome"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/baseline_home_24"
        app:iconGravity="textTop"
        app:backgroundTint="@color/main"
        app:iconTint="@color/white"
        app:iconSize="18dp"
        app:iconPadding="3dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/home_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSearch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSearch"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/baseline_search_24"
        app:iconGravity="textTop"
        app:backgroundTint="@color/main"
        app:iconTint="@color/white"
        app:iconSize="18dp"
        app:iconPadding="3dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/search_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddGem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHome" />

    <Button
        android:id="@+id/btnAddGem"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/round_add_circle_outline_24"
        app:iconGravity="textTop"
        app:backgroundTint="@color/main"
        app:iconTint="@color/white"
        app:iconSize="18dp"
        app:iconPadding="3dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/add_gem_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFaves"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSearch" />

    <Button
        android:id="@+id/btnFaves"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/heart_svgrepo_com"
        app:iconGravity="textTop"
        app:backgroundTint="@color/main"
        app:iconTint="@color/white"
        app:iconSize="18dp"
        app:iconPadding="3dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/faves_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnProfile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAddGem" />

    <Button
        android:id="@+id/btnProfile"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/profile_round_1342_svgrepo_com"
        app:iconGravity="textTop"
        app:backgroundTint="@color/main"
        app:iconTint="@color/white"
        app:iconSize="18dp"
        app:iconPadding="3dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:text="@string/profile_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnFaves" />

</androidx.constraintlayout.widget.ConstraintLayout>