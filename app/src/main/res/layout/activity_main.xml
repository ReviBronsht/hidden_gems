    <!--Gem name-->

    <!--Gem description-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvNameLabel"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_label"
        app:layout_constraintBottom_toTopOf="@+id/etName" />

    <!--Gem address-->

    <!--Gem city-->

    <!--Gem type-->

    <!--Gem rating-->

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:hint="@string/name_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/tvDescLabel" />

    <TextView
        android:id="@+id/tvDescLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_label"
        app:layout_constraintBottom_toTopOf="@+id/etDesc"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:hint="@string/desc_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/tvAddressLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAddressLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_label"
        app:layout_constraintBottom_toTopOf="@+id/etAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:hint="@string/address_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/etRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/warmgray"
        android:hint="@string/city_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etType"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/warmgray"
        android:hint="@string/type_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etCity" />

    <EditText
        android:id="@+id/etRating"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/warmgray"
        android:hint="@string/rating_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etType" />

    <TextView
        android:id="@+id/tvSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_btn"
        android:paddingLeft="18dp"
        android:paddingTop="8dp"
        android:paddingRight="18dp"
        android:paddingBottom="8dp"
        android:text="@string/save_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etRating" />


</androidx.constraintlayout.widget.ConstraintLayout>